---
import type { ArtworkVm } from './artwork.vm'
interface Props {
  artwork: ArtworkVm
}
const { urls, alt, title, year, dimmenstions, material } = Astro.props.artwork
---

<figure>
  <picture>
    {urls.map((url) => <source srcset={url} />)}
    <img
      src={urls[urls.length - 1]}
      alt={alt}
      title={title}
      loading="lazy"
      decoding="async"
    />
  </picture>
  <figcaption>
    <div class="title-year">
      {title.trim()}{year ? ` ${year}` : ''}
    </div>
    <div class="dimmension-material">
      {material}
      {dimmenstions}
    </div>
  </figcaption>
</figure>

<style>
  figure {
    margin: 0;
    display: flex;
    flex-direction: column;
    row-gap: 0.4rem;
  }

  img {
    max-width: 100%;
    max-height: 60rem;
    box-shadow: var(--img-box-shaddow);
    border-radius: var(--img-border-radius);
  }

  .title-year,
  .dimmension-material {
    font-size: 1.4rem;
    font-weight: 300;
  }

  .title-year {
    padding-inline-start: 0.2rem;
    font-style: italic;
  }

  .dimmension-material {
    padding-inline-start: 0.3rem;
  }

  @media screen and (min-width: 800px) {
    img {
      max-height: calc(100vh - 30rem);
      min-height: 33rem;
    }
  }
</style>
