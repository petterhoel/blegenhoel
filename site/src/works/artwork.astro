---

interface Props {
  title: string;
  alt: string;
  url: string;
}
const { url, alt, title } = Astro.props
---

<img src={url} alt={alt} title={title} decoding="async" />

<style>
  img {
    width: 100vw - 10rem;
    max-width: 100vw;
    max-height: 60rem;
  }
  @media screen and (min-width: 800px) {
    img {
      max-height: calc(100vh - 20rem);
    }
  }
</style>
