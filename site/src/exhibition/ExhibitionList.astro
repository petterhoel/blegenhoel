---
import { ExhibitionListVm } from './exhibition.vm'
interface Props extends ExhibitionListVm {}
const { heading, exhibitions } = Astro.props.vm
---
<h2>{heading}</h2>

<ul>
  {exhibitions.map(({name, type, year, space}) => <li>
    <span>{name} </span> <br/>
    <span class='meta'>{type}, </span>
    <span class='meta'>{space}, </span>
    <time class='meta'>{year} </time>
  </li>)}
</ul>

<style>
  ul {
      line-height: 1;
      padding: 0;
      list-style: none;
  }
  li {
      padding-top: 1.6rem;
      margin-bottom: 0;
  }
  li:first-child {
      padding-top: 0;
  }
  .meta {
      font-size: 1.5rem;
  }
</style>
