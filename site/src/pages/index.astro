---
import Layout from '../layouts/Layout.astro'
import { dataClient } from '../cms-integration/data-client'
import { PortableText } from 'astro-portabletext'

export async function getHomePageText() {
  const query = `*[_type == "homepageText"][0]`
  const homepage = await dataClient.fetch(query)
  return homepage
}

const { homepageText } = await getHomePageText()
const language = 'no'
